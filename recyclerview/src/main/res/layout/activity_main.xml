            android:text="基本使用grid" />

        <Button
            android:id="@+id/btn_raise_hand"
            style="@style/style_btn"
            android:text="raise_hand" />

        <Button
            android:id="@+id/btn_twinkling_refresh"
            style="@style/style_btn"
            android:text="twinkling_refresh" />

    </LinearLayout>

</ScrollView>

