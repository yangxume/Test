<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_coordinatorlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:text="coordinatorlayout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_flowlayout"
            style="@style/style_btn_main"
            android:text="flowlayout" />

        <Button
            android:id="@+id/btn_multi_flowlayout"
            style="@style/style_btn_main"
            android:text="multi_flowlayout" />

        <Button
            android:id="@+id/btn_flexboxlayout"
            style="@style/style_btn_main"
            android:text="flexboxlayout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_randomlayout1"
            style="@style/style_btn_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="randomlayout1" />

        <Button
            android:id="@+id/btn_randomlayout2"
            style="@style/style_btn_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="randomlayout2" />

        <Button
            android:id="@+id/btn_randomlayout3"
            style="@style/style_btn_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="randomlayout3" />

        <Button
            android:id="@+id/btn_randomlayout4"
            style="@style/style_btn_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="randomlayout4" />

        <Button
            android:id="@+id/btn_keywordsflow"
            style="@style/style_btn_main"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="keywordsflow" />

    </LinearLayout>


</LinearLayout>